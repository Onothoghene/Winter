@model Winter.ViewModels.Input_Models.CategoryInputViewModel
@{
    ViewData["Title"] = "Add Category";
    Layout = "/Views/Shared/_Layout_Admin.cshtml";
}

<div class="boxed">
    <!--CONTENT CONTAINER-->
    <!--===================================================-->
    <div id="content-container">
        <!--Page content-->
        <!--===================================================-->
        <div id="page-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel">
                        <div class="panel-heading">
                            <h3 class="panel-title">New Category</h3>
                        </div>
                        <!--No Label Form-->
                        <!--===================================================-->
                        <form class="row contact_form" asp-action="AddCategory" asp-controller="Admin" method="post">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-4 mar-btm">
                                        <input type="text" class="form-control" placeholder="Category Name" asp-for="CategoryName">
                                    </div>
                                </div>
                                <textarea placeholder="Category Description" rows="13" class="form-control" asp-for="Description" style="resize:none;"></textarea>
                            </div>
                            <div class="panel-footer text-right">
                                <button class="btn btn-primary" type="submit">Save</button>
                            </div>
                        </form>
                        <!--===================================================-->
                        <!--End No Label Form-->
                    </div>
                </div>
            </div>
        </div>
        <!--===================================================-->
        <!--End page content-->
    </div>
    <!--===================================================-->
    <!--END CONTENT CONTAINER-->
</div>
