@model Winter.ViewModels.Edit_Models.ProductEditViewModel
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

    <div class="boxed">
        <!--CONTENT CONTAINER-->
        <!--===================================================-->
        <div id="content-container">
            <!--Page content-->
            <!--===================================================-->
            <div id="page-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel">
                            <div class="panel-heading">
                                <h3 class="panel-title">New Category</h3>
                            </div>
                            <!--No Label Form-->
                            <!--===================================================-->
                            <form class="row contact_form" asp-action="UpdateProduct" enctype="multipart/form-data">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-md-4 mar-btm">
                                            <input type="text" class="form-control" placeholder="Product Name" asp-for="ProductName">
                                        </div>
                                        <div class="col-md-4 mar-btm">
                                            <input type="number" class="form-control" placeholder="Unit Price" asp-for="UnitPrice">
                                        </div>
                                        <div class="col-md-4 mar-btm">
                                            <select class="form-control selectpicker" data-live-search="true"
                                                    asp-for="CategoryID" asp-items="Model.Categories">
                                                <option value="">Select option</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 mar-btm">
                                            <input type="file" class="form-control" placeholder="Product" asp-for="Files">
                                        </div>
                                        <div class="col-md-4 mar-btm">
                                            <input type="hidden" asp-for="ProductId">
                                        </div>
                                        <div class="col-md-4 mar-btm">
                                            <input type="hidden" asp-for="DateAdded">
                                        </div>
                                    </div>
                                    <textarea placeholder="Category Description" rows="13" class="form-control" asp-for="Description" style="resize:none;"></textarea>

                                </div>
                                <div class="panel-footer text-right">
                                    <button class="btn btn-primary" type="submit">Update</button>
                                </div>
                            </form>
                            <!--===================================================-->
                            <!--End No Label Form-->
                        </div>
                    </div>
                </div>
            </div>
            <!--===================================================-->
            <!--End page content-->
        </div>
        <!--===================================================-->
        <!--END CONTENT CONTAINER-->
    </div>