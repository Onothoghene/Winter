@model Winter.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registration";
}


<!--================login_part Area =================-->
<section class="login_part section_padding">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-6 col-md-6">
                <div class="login_part_form">
                    <div class="login_part_form_iner">
                        <h3>
                            New to our Shop?<br>
                            Please Sign up now
                        </h3>
                        <form class="row contact_form" asp-action="RegisterOrUpdateUser" asp-controller="Account" method="post">
                            <div class="col-md-12 form-group p_star">
                                <input type="text" class="form-control" asp-for="FirstName" placeholder="First Name">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input type="text" class="form-control" asp-for="LastName" placeholder="Last Name">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 form-group p_star">
                                <input type="email" class="form-control" asp-for="Email" placeholder="Your Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 form-group p_star">
                                <input type="password" class="form-control" asp-for="Password" placeholder="Your Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 form-group p_star">
                                <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 form-group p_star">
                                <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Your Phone Number(Optional)">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 form-group">
                                <button type="submit" value="submit" class="btn_3">
                                    Register
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <div class="login_part_text text-center">
                    <div class="login_part_text_iner">
                        <h2>Already Have an account?</h2>
                        <p>
                            Please Sign in now and Continue Shopping
                        </p>
                        <a asp-action="Login" asp-controller="Account" class="btn_3"> Login In Now</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!--================login_part end =================-->